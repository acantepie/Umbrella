{% extends "@UmbrellaCore/Offcanvas/default.html.twig" %}

{% block offcanvas_content %}
    <form enctype="multipart/form-data" method="post" data-xhr="{{ action | default(app.request.uri) }}">
        {{ umbrella_form_theme(form, form_layout | default(null)) }}
        {{ form_errors(form) }}
        {{ form_rest(form) }}

        <div class="d-flex">
            <button type="button" class="btn btn-light ms-auto me-1" data-bs-dismiss="offcanvas">
                <i class="mdi mdi-close me-1"></i> {{ 'Cancel' | trans }}
            </button>

            <button type="submit" class="btn btn-primary">
                <i class="mdi mdi-check me-1"></i> {{ 'Save' | trans }}
            </button>
        </div>
    </form>
{% endblock %}

{% block offcanvas_footer %}
    <div class="offcanvas-footer">

    </div>
{% endblock %}