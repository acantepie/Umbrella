<umbrella-datatable {{ attr | html_attr }}>

    {% block toolbar %}
        {{ render_toolbar(toolbar) }}
    {% endblock %}

    {% block table %}
        <div class="table-responsive">
            <table {{ table_attr | html_attr }}>
                <thead>
                    <tr>
                        {% for column in columns %}
                            <th {{ column.attr | html_attr }}>
                                {%- if column.label is not empty %}
                                    {%- if column.translation_domain %}
                                        {{- (column.label_prefix ~ column.label) | trans([], column.translation_domain) | raw -}}
                                    {% else -%}
                                        {{- (column.label_prefix ~ column.label) | raw -}}
                                    {% endif -%}
                                {% endif -%}
                            </th>
                        {% endfor %}
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    {% endblock %}
</umbrella-datatable>
