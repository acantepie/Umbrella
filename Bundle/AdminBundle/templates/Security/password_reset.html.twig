{% extends '@UmbrellaAdmin/Security/layout.html.twig' %}

{% block content %}
    {{ umbrella_form_theme(form) }}
    <div class="card">

        {% include '@UmbrellaAdmin/Security/head.html.twig' %}

        <div class="card-body p-4">

            <div class="text-center w-100 m-auto">
                <p class="text-muted mb-4">{{ 'message.reset_password' | trans }}</p>
            </div>

            <form method="post">
                {{ form_errors(form.plainPassword.first) }}

                <div class="mb-3">
                    <label for="{{ form.plainPassword.first.vars.id }}">{{ 'label.password' | trans }}</label>
                    {{ form_widget(form.plainPassword.first) }}
                </div>

                <div class="mb-3">
                    <label for="{{ form.plainPassword.second.vars.id }}">{{ 'label.password_confirm' | trans }}</label>
                    {{ form_widget(form.plainPassword.second) }}
                </div>

                {{ form_rest(form) }}


                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="mdi mdi-send me-1"></i> {{ 'action.send' | trans }}
                    </button>
                </div>

            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 text-center">
            <a href="{{ path(constant('Umbrella\\AdminBundle\\Controller\\SecurityController::LOGIN_ROUTE')) }}" class="text-muted ms-1">
                {{ 'action.back_login' | trans }}
            </a>
        </div>
    </div>
{% endblock %}