{% extends '@UmbrellaAdmin/Security/layout.html.twig' %}

{% trans_default_domain 'UmbrellaAdmin' %}
{% block content %}
    <div class="card">
        {% include '@UmbrellaAdmin/Security/head.html.twig' %}

        <div class="card-body p-4">

            <div class="text-center w-100 m-auto">
                <h4 class="text-dark-50 text-center mt-0 font-weight-bold">{{ 'password_resetting.request.title' | trans }}</h4>
                <p class="text-muted mb-4">{{ 'password_resetting.request.text' | trans }}</p>
            </div>

            <form method="post">

                <div class="mb-3">
                    <label for="email" class="form-label">{{ 'label.email' | trans }}</label>
                    <input type="email" id="email" name="email" class="form-control" required="required" value="{{ email }}" placeholder="{{ 'label.enter_your_email' | trans }}"/>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">
                        <i class="mdi mdi-lock-reset me-1"></i> {{ 'password_resetting.request.submit' | trans }}
                    </button>
                </div>

            </form>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-12 text-center">
            <a href="{{ path(constant('Umbrella\\AdminBundle\\Controller\\SecurityController::LOGIN_ROUTE')) }}" class="text-muted ms-1">
                {{ 'password_resetting.back_login_markup' | trans | raw }}
            </a>
        </div>
    </div>
{% endblock %}